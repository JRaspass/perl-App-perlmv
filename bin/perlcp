#!perl

use strict;
use warnings;
use FindBin '$Bin';
use lib "$Bin/../lib";
use App::perlmv;

# VERSION

my $pmv = App::perlmv->new;
$pmv->{ 'mode' } = 'copy';
$pmv->run;

1;
# ABSTRACT: Copy files using Perl code
# PODNAME: perlcp

