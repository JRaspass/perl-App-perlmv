#!/usr/bin/perl

# workaround for dzil
package main;

use strict;
use warnings;
use FindBin '$Bin';
use lib "$Bin/../lib";
use App::perlmv;

my $pmv = App::perlmv->new;
$pmv->{ 'mode' } = 'copy';
$pmv->run;

1;
__END__
=head1 NAME

perlcp - Copy files using Perl code

=head1 DESCRIPTION

See L<perlmv> for more documentation.

=head1 SEE ALSO

L<perlmv>

=cut
